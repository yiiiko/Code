//mouse clicked for looping
float x=0;

void setup(){
background (255);
size (800,800);
noLoop();
noSmooth();
int i = 0;
while (i < 800) { //while loop
  fill(255,255,255);
  point (25,i);
  i = i + 10;
  point (775,i);
}
x = x + .1;
  if (x > width) {
    x = 0;
  }
  line(x, 0, x, height); 
}




void draw(){
 
//translate(width/2, height/2);
//rotateX(radians(mouseY));
//rotateY(radians(mouseX));
  
for (int i=0; i <500; i+=10){//loop#1
  fill(mouseX, mouseY, 255);
  ellipse(0,800,i/3,i/3);

 
}
for (int a=800; a >0; a--){ //loop#2 

  //ellipse(1/i,1/i,i/3,i/3); my inverse of i is killing the program
 ellipse(800-a,800-a, a-300,a-300);
 
}
for (int i=0; i <300; i++){
  i = i +1;
 //ellipse ()
  line(500, i, 800, i);
 
 
}
